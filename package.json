{
  "name": "brushy",
  "private": true,
  "author": "Gustavo Franco <contact@gfrancodev.com>",
  "license": "MIT",
  "homepage": "https://gfrancodev.com",
  "scripts": {
    "build": "turbo build",
    "build-packages": "turbo run build --filter=./packages/*",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "test": "turbo run test --filter=@brushy/*",
    "test:coverage": "turbo run test:coverage --filter=@brushy/*",
    "changeset": "npx changeset",
    "version-packages": "npx changeset version",
    "release": "npm run build-packages && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "jsdom": "^26.0.0",
    "prettier": "^3.5.3",
    "turbo": "^2.4.4",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@testing-library/dom": "^10.4.0"
  },
  "lint-staged": {
    "*.{js,ts,json}": "prettier --write \"src/**/*.ts\""
  }
}
